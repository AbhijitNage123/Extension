{
	"manifest_version": 3,
	"name": "ZipWP Extension",
	"version": "1.0",
	"description": "A Chrome extension for ZipWP",
	"icons": {
		"16": "zipwp-logo-dark.png",
		"48": "zipwp-logo-dark.png",
		"128": "zipwp-logo-dark.png"
	},
	"action": {
		"default_icon": {
			"16": "zipwp-logo-dark.png",
			"48": "zipwp-logo-dark.png",
			"128": "zipwp-logo-dark.png"
		},
		"default_popup": "popup.html",
		"default_title": "ZipWP Extension"
	},
	"permissions": [
		"activeTab"
	],
	"host_permissions": [
		"<all_urls>"
	]
}